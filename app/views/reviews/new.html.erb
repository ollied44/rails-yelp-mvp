<div class="container mt-5" style="max-width: 600px;">
  <h1 class="mb-4">Add a Review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>

    <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-link" %>
  </div>
</div>
