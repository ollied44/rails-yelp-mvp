<div class="container py-5" style="max-width: 700px;">
  <h1 class="mb-4 fw-bold text-center">Restaurants</h1>

  <div class="list-group shadow-sm">
    <% @restaurants.each do |restaurant| %>
      <a href="<%= restaurant_path(restaurant) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <span class="fw-semibold"><%= restaurant.name %></span>
        <span class="badge bg-primary text-uppercase small"><%= restaurant.category %></span>
      </a>
    <% end %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "+ Add a new restaurant", new_restaurant_path, class: "btn btn-outline-primary" %>
  </div>
</div>
